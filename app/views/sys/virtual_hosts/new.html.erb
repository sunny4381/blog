<%= form_with model: model, scope: :model, url: url_for(action: :create), class: "model-form", data: { id: model.id } do |form| %>
  <%= render 'layouts/error_messages', model: model %>

  <section id="sophon-basic">
    <header><h2>基本情報</h2></header>

    <div class="uk-margin">
      <%= form.label :host, model_class.human_attribute_name(:host), class: "uk-form-label" %>
      <%= form.text_field :host, class: "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= form.label :path, model_class.human_attribute_name(:path), class: "uk-form-label" %>
      <%= form.text_field :path, class: "uk-input" %>
    </div>
  </section>

  <section class="uk-margin">
    <%= form.submit "作成", class: "uk-button uk-button-primary" %>
    <%= link_to "キャンセル", { action: :index }, { class: "uk-button uk-button-default" } %>
  </section>
<% end %>
