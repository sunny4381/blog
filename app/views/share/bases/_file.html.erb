<%# link_to "編集", { action: :edit }, { class: "uk-button uk-button-default" } %>
<%# link_to "ダウンロード", { action: :download }, { class: "uk-button uk-button-default" } %>
<%# link_to "移動", { action: :move }, { class: "uk-button uk-button-default" } %>
<%= link_to "削除", delete_share_file_path(id: parent), class: "uk-button uk-button-danger", data: { controller: "open-dialog" } %>

<% if parent.file.present? %>
  <section id="sophon-basic">
    <div class="uk-margin uk-margin-top">
      <% if parent.image? %>
        <%= image_tag rails_blob_path(parent.file, disposition: "inline"), alt: parent.name, class: "uk-width-expand" %>
      <% elsif parent.inline? %>
        <embed type="<%= parent.file.content_type %>" src="<%= rails_blob_path(parent.file, disposition: "inline") %>" title="<%= parent.name %>" class="uk-width-expand" uk-height-viewport="expand: true">
      <% else %>
        <%= label_tag :name, parent.human_attribute_name(:name), class: "form-label" %>
        <div class="uk-form-controls">
          <%= text_field_tag :name, parent.name, class: "uk-input", disabled: true %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
